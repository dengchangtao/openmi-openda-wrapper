  <!-- Observations used for assimilation -->
  <CTA_SOBS id="obs_assim" database="../obs/obs_pollute2d.sql"/>

  <!-- Used model class -->
  <CTA_MODELCLASS id="modelclass"  implements="pollute2d" name="CTA_MODBUILD_SP" nproc="2" parallel_type="Worker-Worker"
          ntimes="*"/>
