<?xml version="1.0" encoding="UTF-8"?>
<costa xmlns:xi="http://www.w3.org/2001/XInclude">
<!--$URL: https://repos.deltares.nl/repos/openda/openda_1/public/trunk/core/native/examples/advec1d/etc/ens_advec1d.xml $-->
<!--$Revision: 833 $, $Date: 2009-04-05 14:42:12 +0200 (zo, 05 apr 2009) $-->

  <!-- De invoer m.b.t. de observaties -->
  <CTA_SOBS id="obs_assim" database="../obs/obs_advec1d.sql"/>

  <!-- Used model class -->
  <xi:include href="advec1d_cls.xml"/>

  <!-- De invoer m.b.t. het filter.  -->
  <!-- Dit filter maakt zelf de model-instantiaties aan -->
  <method name="ensemble"> 
  <ensemble_filter>
    <!-- Simulatie timespan en stapgrootte via CTA_Time -->
    <CTA_TIME id="simulation_span" start="0" stop="10" step="0.0005"/>
    <output>
       <filename>results.nc</filename>
       <CTA_TIME id="times_mean" start="0" stop="10" step="0.005"/>
       <CTA_TIME id="times_ensemble" start="0" stop="10" step="0.05"/>
    </output>
    <output_bg>
       <filename>results_bg.nc</filename>
       <CTA_TIME id="times_mean"     start="0" stop="10" step="0.005"/>
    </output_bg>

    <modes max_id="5">
       <model>
       </model>
    </modes>
  </ensemble_filter>
  </method> 
</costa>

